{
  "entities": {
    "User": {
      "description": "Perfil de acesso ao sistema vinculado à conta Google.",
      "properties": {
        "id": { "type": "string" },
        "role": { "enum": ["admin", "lawyer", "financial", "assistant"] }
      }
    },
    "Client": {
      "description": "Base de dados de clientes e leads.",
      "properties": {
        "integrity": { "type": "number", "description": "Percentual de preenchimento do cadastro." },
        "driveFolderId": { "type": "string" }
      }
    },
    "Process": {
      "description": "Processos judiciais vinculados a clientes.",
      "properties": {
        "timeline": { "type": "array", "description": "Histórico de andamentos e notas." },
        "legalArea": { "type": "string" },
        "leadLawyerId": { "type": "string" }
      }
    },
    "LegalDeadline": {
      "description": "Prazos fatais vinculados a processos.",
      "properties": {
        "startDate": { "type": "string", "format": "date" },
        "endDate": { "type": "string", "format": "date" },
        "isBusinessDays": { "type": "boolean" },
        "status": { "enum": ["PENDENTE", "CUMPRIDO", "PERDIDO", "CANCELADO"] }
      }
    },
    "Staff": {
      "description": "Equipe do escritório com regras de remuneração.",
      "properties": {
        "role": { "enum": ["lawyer", "intern", "employee"] },
        "remuneration": {
          "type": "object",
          "properties": {
            "type": { "enum": ["SUCUMBENCIA", "PRODUCAO", "QUOTA_LITIS", "FIXO_MENSAL", "AUDIENCISTA"] }
          }
        }
      }
    }
  },
  "integrations": {
    "GoogleDrive": "Sincronização de pastas por cliente e processo.",
    "GoogleCalendar": "Agendamento automático de audiências com link WhatsApp.",
    "GenkitAI": "Insights estratégicos sobre faturamento e carga de trabalho."
  }
}