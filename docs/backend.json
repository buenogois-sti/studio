{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user in the LexFlow Workspace system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity."
        },
        "googleId": {
          "type": "string",
          "description": "The Google ID of the user, obtained during Google OAuth authentication."
        },
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        },
        "firstName": {
          "type": "string",
          "description": "The first name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "The last name of the user."
        },
        "role": {
          "type": "string",
          "description": "The role of the user (e.g., admin, lawyer, financial).",
          "format": "string"
        },
        "createdAt": {
          "type": "string",
          "description": "The date and time when the user was created.",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "The date and time when the user was last updated.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "googleId",
        "email",
        "firstName",
        "lastName",
        "role",
        "createdAt",
        "updatedAt"
      ]
    },
    "Client": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Client",
      "type": "object",
      "description": "Represents a client in the LexFlow Workspace system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the client entity."
        },
        "firstName": {
          "type": "string",
          "description": "The first name of the client."
        },
        "lastName": {
          "type": "string",
          "description": "The last name of the client."
        },
        "clientType": {
          "type": "string",
          "description": "Type of client (e.g., 'Pessoa Física', 'Pessoa Jurídica')."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The email of the client."
        },
        "document": {
          "type": "string",
          "description": "The client's identification document (e.g., CPF, CNPJ)."
        },
        "phone": {
          "type": "string",
          "description": "The client's phone number."
        },
        "mobile": {
          "type": "string",
          "description": "The client's mobile phone number."
        },
        "avatar": {
          "type": "string",
          "description": "The URL of the client's avatar."
        },
        "legalArea": {
          "type": "string",
          "description": "The legal area of the case associated with the client."
        },
        "address": {
          "type": "object",
          "description": "The client's address.",
          "properties": {
            "street": {
              "type": "string"
            },
            "number": {
              "type": "string"
            },
            "complement": {
              "type": "string"
            },
            "zipCode": {
              "type": "string"
            },
            "neighborhood": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "state": {
              "type": "string"
            }
          }
        },
        "driveFolderId": {
          "type": "string",
          "description": "The ID of the client's folder in Google Drive."
        },
        "sheetId": {
          "type": "string",
          "description": "The ID of the client's Google Sheet."
        },
        "createdAt": {
          "type": "string",
          "description": "The date and time when the client was created.",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "The date and time when the client was last updated.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "firstName",
        "lastName",
        "document",
        "createdAt",
        "email"
      ]
    },
    "Process": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Process",
      "type": "object",
      "description": "Represents a legal process in the LexFlow Workspace system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the process entity."
        },
        "clientId": {
          "type": "string",
          "description": "Reference to the primary client associated with the process."
        },
        "name": {
          "type": "string",
          "description": "The title or internal name for the process, for easy identification."
        },
        "processNumber": {
          "type": "string",
          "description": "The official number of the legal process, if distributed."
        },
        "court": {
          "type": "string",
          "description": "The court where the process is being handled (e.g., 'TRT-2')."
        },
        "courtBranch": {
          "type": "string",
          "description": "The specific branch or division of the court (Vara)."
        },
        "caseValue": {
          "type": "number",
          "description": "The monetary value of the case."
        },
        "opposingParties": {
          "type": "array",
          "description": "A list of names of the opposing parties (people or companies).",
          "items": {
            "type": "string"
          }
        },
        "description": {
          "type": "string",
          "description": "Detailed notes and observations about the process."
        },
        "status": {
          "type": "string",
          "description": "Current status of the process.",
          "enum": [
            "Ativo",
            "Arquivado",
            "Pendente"
          ]
        },
        "responsibleStaffIds": {
          "type": "array",
          "description": "A list of staff IDs responsible for the process.",
          "items": {
            "type": "string"
          }
        },
        "driveFolderId": {
          "type": "string",
          "description": "The ID of the process's subfolder in Google Drive."
        },
        "createdAt": {
          "type": "string",
          "description": "The date and time when the process was created.",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "The date and time when the process was last updated.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "clientId",
        "name",
        "createdAt"
      ]
    },
    "Hearing": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Hearing",
      "type": "object",
      "description": "Represents a court hearing in the LexFlow Workspace system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the hearing entity."
        },
        "processId": {
          "type": "string",
          "description": "Reference to Process. (Relationship: Process 1:N Hearing)"
        },
        "date": {
          "type": "string",
          "description": "The date of the hearing.",
          "format": "date-time"
        },
        "location": {
          "type": "string",
          "description": "The location of the hearing."
        },
        "responsibleParty": {
          "type": "string",
          "description": "The party responsible for the hearing."
        },
        "notes": {
          "type": "string",
          "description": "Additional notes about the hearing."
        }
      },
      "required": [
        "id",
        "processId",
        "date",
        "location",
        "responsibleParty"
      ]
    },
    "FinancialEvent": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "FinancialEvent",
      "description": "Represents a legal event that can trigger financial transactions, like an agreement or a court sentence.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "processId": {
          "type": "string",
          "description": "Link to the Process entity."
        },
        "type": {
          "type": "string",
          "enum": [
            "ACORDO",
            "SENTENCA",
            "EXECUCAO",
            "CONTRATO"
          ]
        },
        "eventDate": {
          "type": "string",
          "format": "date-time"
        },
        "description": {
          "type": "string"
        },
        "totalValue": {
          "type": "number"
        }
      },
      "required": [
        "id",
        "processId",
        "type",
        "eventDate",
        "totalValue"
      ]
    },
    "FinancialTitle": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "FinancialTitle",
      "description": "Represents a single financial receivable or payable, generated from a FinancialEvent.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "financialEventId": {
          "type": "string",
          "description": "Link to the originating FinancialEvent."
        },
        "processId": {
          "type": "string",
          "description": "Denormalized link to the Process."
        },
        "clientId": {
          "type": "string",
          "description": "Denormalized link to the Client."
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "RECEITA",
            "DESPESA"
          ]
        },
        "origin": {
          "type": "string",
          "enum": [
            "ACORDO",
            "SENTENCA",
            "HONORARIOS_CONTRATUAIS",
            "SUCUMBENCIA",
            "CUSTAS_PROCESSUAIS",
            "HONORARIOS_PAGOS",
            "SALARIOS_PROLABORE",
            "ALUGUEL_CONTAS",
            "INFRAESTRUTURA_TI",
            "MARKETING_PUBLICIDADE",
            "IMPOSTOS_TAXAS",
            "MATERIAL_ESCRITORIO",
            "SERVICOS_TERCEIROS",
            "OUTRAS_DESPESAS"
          ]
        },
        "value": {
          "type": "number"
        },
        "dueDate": {
          "type": "string",
          "format": "date-time"
        },
        "paymentDate": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "PENDENTE",
            "PAGO",
            "ATRASADO"
          ]
        }
      },
      "required": [
        "id",
        "processId",
        "clientId",
        "description",
        "type",
        "origin",
        "value",
        "dueDate",
        "status"
      ]
    },
    "FeeSplitRule": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "FeeSplitRule",
      "description": "Defines the fee splitting rule for a specific process.",
      "type": "object",
      "properties": {
        "processId": {
          "type": "string",
          "description": "The ID of the process this rule applies to."
        },
        "participants": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "staffId": {
                "type": "string",
                "description": "ID of the staff member (lawyer)."
              },
              "percentage": {
                "type": "number",
                "description": "Percentage of the fee (0-100)."
              }
            },
            "required": [
              "staffId",
              "percentage"
            ]
          }
        }
      },
      "required": [
        "processId",
        "participants"
      ]
    },
    "LawyerCredit": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "LawyerCredit",
      "description": "Represents a credit generated for a lawyer from a paid FinancialTitle.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "staffId": {
          "type": "string"
        },
        "processId": {
          "type": "string"
        },
        "financialTitleId": {
          "type": "string",
          "description": "The paid title that generated this credit."
        },
        "value": {
          "type": "number"
        },
        "creditDate": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "DISPONIVEL",
            "RETIDO",
            "PAGO"
          ]
        },
        "payoutDate": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "staffId",
        "processId",
        "financialTitleId",
        "value",
        "creditDate",
        "status"
      ]
    },
    "Log": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Log",
      "type": "object",
      "description": "Represents an audit log entry in the LexFlow Workspace system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the log entry."
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N Log)"
        },
        "action": {
          "type": "string",
          "description": "The action that was performed (e.g., create client, update process)."
        },
        "description": {
          "type": "string",
          "description": "A description of the action that was performed."
        },
        "timestamp": {
          "type": "string",
          "description": "The date and time when the action was performed.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "userId",
        "action",
        "description",
        "timestamp"
      ]
    },
    "Staff": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Staff",
      "type": "object",
      "description": "Represents a staff member in the LexFlow Workspace system (employee, lawyer, or intern).",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the staff member."
        },
        "role": {
          "type": "string",
          "description": "The role of the staff member.",
          "enum": [
            "employee",
            "lawyer",
            "intern"
          ]
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        },
        "whatsapp": {
          "type": "string"
        },
        "address": {
          "type": "object",
          "properties": {
            "street": {
              "type": "string"
            },
            "number": {
              "type": "string"
            },
            "complement": {
              "type": "string"
            },
            "zipCode": {
              "type": "string"
            },
            "neighborhood": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "state": {
              "type": "string"
            }
          }
        },
        "oabNumber": {
          "type": "string",
          "description": "OAB number for lawyers and interns."
        },
        "oabStatus": {
          "type": "string",
          "description": "OAB status (e.g., Ativa, Suspensa).",
          "enum": [
            "Ativa",
            "Suspensa",
            "Inativa",
            "Pendente"
          ]
        },
        "bankInfo": {
          "type": "object",
          "properties": {
            "bankName": {
              "type": "string"
            },
            "agency": {
              "type": "string"
            },
            "account": {
              "type": "string"
            },
            "pixKey": {
              "type": "string"
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "role",
        "firstName",
        "lastName",
        "email",
        "createdAt"
      ]
    },
    "SystemSettings": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SystemSettings",
      "type": "object",
      "description": "Stores global system settings.",
      "properties": {
        "clientKitTemplates": {
          "type": "array",
          "description": "List of template documents for the new client kit.",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "templateId": {
                "type": "string"
              },
              "destination": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "name",
              "templateId",
              "destination"
            ]
          }
        }
      }
    },
    "DocumentTemplate": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "DocumentTemplate",
      "type": "object",
      "description": "Represents a document template in the firm's central library.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the template."
        },
        "name": {
          "type": "string",
          "description": "The user-facing name of the template."
        },
        "description": {
          "type": "string",
          "description": "A brief explanation of the template's purpose."
        },
        "category": {
          "type": "string",
          "description": "Category for organizing templates (e.g., 'Procurações', 'Recibos')."
        },
        "templateFileId": {
          "type": "string",
          "description": "The ID of the source Google Drive file for the template."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "category",
        "templateFileId",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "google"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/User"
      },
      "description": "Stores user profiles. User documents are secured by path-based ownership."
    },
    "/clients/{clientId}": {
      "schema": {
        "$ref": "#/backend/entities/Client"
      },
      "description": "Stores client information."
    },
    "/processes/{processId}": {
      "schema": {
        "$ref": "#/backend/entities/Process"
      },
      "description": "Stores legal process information, linked to a client."
    },
    "/processes/{processId}/fee_split_rules/default": {
      "schema": {
        "$ref": "#/backend/entities/FeeSplitRule"
      },
      "description": "Stores the fee split rule for a specific process."
    },
    "/hearings/{hearingId}": {
      "schema": {
        "$ref": "#/backend/entities/Hearing"
      },
      "description": "Stores hearing information."
    },
    "/financial_events/{eventId}": {
      "schema": {
        "$ref": "#/backend/entities/FinancialEvent"
      },
      "description": "Stores legal-financial events."
    },
    "/financial_titles/{titleId}": {
      "schema": {
        "$ref": "#/backend/entities/FinancialTitle"
      },
      "description": "Stores individual financial titles (receivables/payables)."
    },
    "/users/{userId}/logs/{logId}": {
      "schema": {
        "$ref": "#/backend/entities/Log"
      },
      "description": "Stores audit logs for specific users. Secured by path-based ownership."
    },
    "/staff/{staffId}": {
      "schema": {
        "$ref": "#/backend/entities/Staff"
      },
      "description": "Stores staff member information."
    },
    "/staff/{staffId}/credits/{creditId}": {
      "schema": {
        "$ref": "#/backend/entities/LawyerCredit"
      },
      "description": "Stores credits generated for a staff member."
    },
    "/system_settings/{settingId}": {
      "schema": {
        "$ref": "#/backend/entities/SystemSettings"
      },
      "description": "Stores global configuration documents for the system, like the client kit templates."
    },
    "/document_templates/{templateId}": {
      "schema": {
        "$ref": "#/backend/entities/DocumentTemplate"
      },
      "description": "Stores the central library of document templates."
    }
  }
}
