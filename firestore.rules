rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- Funções Auxiliares ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return request.auth.token.role;
    }

    function isOneOfRoles(roles) {
      return isAuthenticated() && getUserRole() != null && getUserRole() in roles;
    }

    function isAdmin() {
      return isOneOfRoles(['admin']);
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- Regras por Coleção ---
    
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow create, delete: if isAdmin();

      match /notifications/{notificationId} {
        allow read, update, delete: if isOwner(userId) || isAdmin();
        allow create: if isAuthenticated();
      }

      match /logs/{logId} {
        allow read: if isOwner(userId) || isAdmin();
        allow create: if isAuthenticated();
      }
    }

    match /reimbursements/{reimbursementId} {
      // Admins e Financeiros podem listar e ler tudo.
      // Usuários comuns podem apenas listar e ler se o filtro da query for seu próprio userId.
      allow list: if isOneOfRoles(['admin', 'financial']) || (isAuthenticated() && request.query.filters.userId == request.auth.uid);
      allow get: if isOneOfRoles(['admin', 'financial']) || (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      allow create: if isAuthenticated();
      
      // Apenas Admin/Financeiro ou o dono (se ainda estiver pendente) podem editar/deletar
      allow update, delete: if isOneOfRoles(['admin', 'financial']) || (isAuthenticated() && resource.data.userId == request.auth.uid);
    }

    match /clients/{clientId} {
      allow read: if isAuthenticated();
      allow create, update: if isOneOfRoles(['admin', 'lawyer', 'assistant']);
      allow delete: if isAdmin();
    }

    match /processes/{processId} {
      allow read: if isAuthenticated();
      allow create, update: if isOneOfRoles(['admin', 'lawyer', 'assistant']);
      allow delete: if isAdmin();
    }

    match /hearings/{hearingId} {
      allow read: if isAuthenticated();
      allow create, update: if isOneOfRoles(['admin', 'lawyer', 'assistant']);
      allow delete: if isAdmin();
    }

    match /deadlines/{deadlineId} {
      allow read: if isAuthenticated();
      allow create, update: if isOneOfRoles(['admin', 'lawyer', 'assistant']);
      allow delete: if isAdmin();
    }

    match /financial_events/{eventId} {
      allow read: if isAuthenticated();
      allow write: if isOneOfRoles(['admin', 'financial']);
    }

    match /financial_titles/{titleId} {
      allow read: if isAuthenticated();
      allow write: if isOneOfRoles(['admin', 'financial']);
    }
    
    match /staff/{staffId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      match /credits/{creditId} {
        allow read: if isAuthenticated();
        allow write: if isOneOfRoles(['admin', 'financial']);
      }
    }

    match /document_templates/{templateId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /system_settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}