rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      // User must be authenticated. Relaxed to allow reads even with partial/broken tokens.
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function hasRole(role) {
      // Safely check for the existence of the token and role.
      return isSignedIn() && request.auth.token != null && request.auth.token.role == role;
    }

    function isOneOfRoles(roles) {
      // Safely check for the existence of the token and role.
      return isSignedIn() && request.auth.token != null && request.auth.token.role in roles;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    // --- Collection Rules ---

    // Users can read/update their own profile. Admins can manage any profile.
    match /users/{userId} {
      allow read, update: if isUser(userId) || isAdmin();
      // Allow creation/deletion only by admins.
      allow create, delete: if isAdmin();

      // User can create their own logs. Admins can read them. Logs are immutable.
      match /logs/{logId} {
        allow create: if isUser(userId);
        allow read: if isAdmin();
        allow update, delete: if false;
      }
    }

    // Any signed-in user can read data, but writes are restricted.
    match /clients/{clientId} {
      allow read: if isSignedIn();
      allow write: if isOneOfRoles(['admin', 'lawyer']);
    }

    match /processes/{processId} {
      allow read: if isSignedIn();
      allow write: if isOneOfRoles(['admin', 'lawyer']);

      match /fee_split_rules/default {
        allow read, write: if isOneOfRoles(['admin', 'lawyer', 'financial']);
      }
    }

    match /hearings/{hearingId} {
      allow read: if isSignedIn();
      allow write: if isOneOfRoles(['admin', 'lawyer']);
    }

    match /financial_events/{eventId} {
      allow read: if isSignedIn();
      allow write: if isOneOfRoles(['admin', 'financial']);
    }

    match /financial_titles/{titleId} {
      allow read: if isSignedIn();
      allow write: if isOneOfRoles(['admin', 'financial']);
    }

    // Staff list can be read by any authenticated user.
    match /staff/{staffId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();

      // Credits are viewable by the staff member, but managed by admin/financial.
      match /credits/{creditId} {
        allow read: if isUser(staffId) || isOneOfRoles(['admin', 'financial']);
        allow write: if isOneOfRoles(['admin', 'financial']);
      }
    }

    // Document templates can be read by anyone signed in.
    match /document_templates/{templateId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // System settings are only manageable by admins.
    match /system_settings/{settingId} {
      allow read, write: if isAdmin();
    }
  }
}
