rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- Funções Auxiliares ---
    function isAuthenticated() {
      return request.auth != null && request.auth.uid != null;
    }
    
    function getUserRole() {
      return request.auth.token.role;
    }

    function isOneOfRoles(roles) {
      return isAuthenticated() && (getUserRole() in roles);
    }

    function isAdmin() {
      return isOneOfRoles(['admin']);
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- Regras por Coleção ---
    
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow create, delete: if isAdmin();

      match /notifications/{notificationId} {
        allow read, update, delete: if isOwner(userId) || isAdmin();
        allow create: if isAuthenticated();
      }

      match /logs/{logId} {
        allow read: if isOwner(userId) || isAdmin();
        allow create: if isAuthenticated();
      }
    }

    match /reimbursements/{reimbursementId} {
      // Regra de Leitura: Admin/Financial veem tudo, User vê apenas os seus documentos
      // Firestore impõe que a query tenha o filtro where('userId', '==', request.auth.uid)
      allow read: if isAuthenticated() && (
        isOneOfRoles(['admin', 'financial']) || 
        (resource.data.userId == request.auth.uid) ||
        (request.resource.data.userId == request.auth.uid)
      );
      
      allow create: if isAuthenticated();
      
      allow update, delete: if isAuthenticated() && (
        isOneOfRoles(['admin', 'financial']) || 
        (resource.data.userId == request.auth.uid)
      );
    }

    match /clients/{clientId} {
      allow read: if isAuthenticated();
      allow create, update: if isOneOfRoles(['admin', 'lawyer', 'assistant']);
      allow delete: if isAdmin();
    }

    match /processes/{processId} {
      allow read: if isAuthenticated();
      allow create, update: if isOneOfRoles(['admin', 'lawyer', 'assistant']);
      allow delete: if isAdmin();
    }

    match /hearings/{hearingId} {
      allow read: if isAuthenticated();
      allow create, update: if isOneOfRoles(['admin', 'lawyer', 'assistant']);
      allow delete: if isAdmin();
    }

    match /deadlines/{deadlineId} {
      allow read: if isAuthenticated();
      allow create, update: if isOneOfRoles(['admin', 'lawyer', 'assistant']);
      allow delete: if isAdmin();
    }

    match /financial_events/{eventId} {
      allow read: if isAuthenticated();
      allow write: if isOneOfRoles(['admin', 'financial']);
    }

    match /financial_titles/{titleId} {
      allow read: if isAuthenticated();
      allow write: if isOneOfRoles(['admin', 'financial']);
    }
    
    match /staff/{staffId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      match /credits/{creditId} {
        allow read: if isAuthenticated();
        allow write: if isOneOfRoles(['admin', 'financial']);
      }
    }

    match /document_templates/{templateId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /system_settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}