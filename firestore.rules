rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    // NOTE: Write operations rely on a properly authenticated user token with custom claims.
    // If client-side authentication is failing, these checks may not work as expected.
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function hasRole(role) {
      // Safely check for the existence of the token and role.
      return isSignedIn() && request.auth.token != null && request.auth.token.role == role;
    }

    function isOneOfRoles(roles) {
      // Safely check for the existence of the token and role.
      return isSignedIn() && request.auth.token != null && request.auth.token.role in roles;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    // --- Collection Rules ---

    // Users: Read is public to allow profile loading even with auth issues.
    // Writes are still protected.
    match /users/{userId} {
      allow read: if true; // Temporarily public to unblock UI loading
      allow update: if isUser(userId) || isAdmin();
      allow create, delete: if isAdmin();

      // Logs: Still protected. Writes require user ownership, reads require admin.
      match /logs/{logId} {
        allow create: if isUser(userId);
        allow read: if isAdmin();
        allow update, delete: if false;
      }
    }

    // All other main collections: Public read, protected write.
    match /clients/{clientId} {
      allow read: if true;
      allow write: if isOneOfRoles(['admin', 'lawyer']);
    }

    match /processes/{processId} {
      allow read: if true;
      allow write: if isOneOfRoles(['admin', 'lawyer']);

      match /fee_split_rules/default {
        allow read: if true;
        allow write: if isOneOfRoles(['admin', 'lawyer', 'financial']);
      }
    }

    match /hearings/{hearingId} {
      allow read: if true;
      allow write: if isOneOfRoles(['admin', 'lawyer']);
    }

    match /financial_events/{eventId} {
      allow read: if true;
      allow write: if isOneOfRoles(['admin', 'financial']);
    }

    match /financial_titles/{titleId} {
      allow read: if true;
      allow write: if isOneOfRoles(['admin', 'financial']);
    }

    match /staff/{staffId} {
      allow read: if true;
      allow write: if isAdmin();

      match /credits/{creditId} {
        // Staff can see their own credits. Admin/Financial can see any.
        allow read: if isUser(staffId) || isOneOfRoles(['admin', 'financial']);
        allow write: if isOneOfRoles(['admin', 'financial']);
      }
    }

    match /document_templates/{templateId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /system_settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
