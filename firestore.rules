rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- Helper Functions ---
    function isOneOfRoles(roles) {
      return request.auth != null && request.auth.token != null && request.auth.token.role in roles;
    }
    function isAdmin() {
      return isOneOfRoles(['admin']);
    }
    function isUser(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- Global Read Rule ---
    // Temporary measure for prototype stability.
    match /{path=**} {
      allow read: if true;
    }

    // --- Collection-Specific Write Rules ---
    match /users/{userId} {
      // User can update their profile, but CANNOT change their own role unless they are admin.
      allow update: if (isUser(userId) && request.resource.data.role == resource.data.role) || isAdmin();
      allow create, delete: if isAdmin();
      
      match /notifications/{notificationId} {
        allow read, update: if isUser(userId);
        allow create, delete: if false;
      }

      match /logs/{logId} {
        allow create: if isUser(userId);
      }
    }

    match /clients/{clientId} {
      allow create, update: if isOneOfRoles(['admin', 'lawyer', 'assistant']);
      allow delete: if isAdmin();
    }

    match /processes/{processId} {
      allow create, update: if isOneOfRoles(['admin', 'lawyer', 'assistant']);
      allow delete: if isAdmin();
    }

    match /processes/{processId}/fee_split_rules/default {
      allow write: if isOneOfRoles(['admin', 'lawyer', 'financial']);
    }

    match /hearings/{hearingId} {
      allow create, update: if isOneOfRoles(['admin', 'lawyer', 'assistant']);
      allow delete: if isAdmin();
    }

    match /financial_events/{eventId} {
      allow write: if isOneOfRoles(['admin', 'financial']);
    }

    match /financial_titles/{titleId} {
      allow write: if isOneOfRoles(['admin', 'financial']);
    }

    match /staff/{staffId} {
      allow write: if isAdmin();
    }

    match /staff/{staffId}/credits/{creditId} {
      allow write: if isOneOfRoles(['admin', 'financial']);
    }

    match /document_templates/{templateId} {
      allow write: if isAdmin();
    }

    match /system_settings/{settingId} {
      allow write: if isAdmin();
    }
  }
}
