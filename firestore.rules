rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the user profile collection.
    // Temporarily allowing any authenticated user to read/write for development.
    match /users/{userId} {
      allow read, write: if isSignedIn();

      // Rules for a user's private audit logs.
      // Temporarily allowing any authenticated user to read/write for development.
      match /logs/{logId} {
        allow read, write: if isSignedIn();
      }
    }

    // Secures the client data collection.
    // Temporarily allowing any authenticated user to read/write for development.
    match /clients/{clientId} {
      allow read, write: if isSignedIn();
    }

    // Secures the legal process collection.
    // Temporarily allowing any authenticated user to read/write for development.
    match /processes/{processId} {
      allow read, write: if isSignedIn();
    }

    // Secures the court hearing collection.
    // Temporarily allowing any authenticated user to read/write for development.
    match /hearings/{hearingId} {
      allow read, write: if isSignedIn();
    }

    // Secures the financial transaction collection.
    // Temporarily allowing any authenticated user to read/write for development.
    match /financial_transactions/{financialTransactionId} {
      allow read, write: if isSignedIn();
    }
  }
}
