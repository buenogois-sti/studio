rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // WARNING: Rules are temporarily open for debugging authentication issues.
    // This is insecure and should be reverted once the issue is resolved.

    // Rules for the user profile collection.
    match /users/{userId} {
      allow read, write: if true; // Temporarily allow all access

      // Rules for a user's private audit logs.
      match /logs/{logId} {
        allow read, write: if true; // Temporarily allow all access
      }
    }

    // Secures the client data collection.
    match /clients/{clientId} {
      allow read, write: if true; // Temporarily allow all access
    }

    // Secures the legal process collection.
    match /processes/{processId} {
      allow read, write: if true; // Temporarily allow all access
    }

    // Secures the court hearing collection.
    match /hearings/{hearingId} {
      allow read, write: if true; // Temporarily allow all access
    }

    // Secures the financial transaction collection.
    match /financial_transactions/{financialTransactionId} {
      allow read, write: if true; // Temporarily allow all access
    }

    // Secures the staff data collection.
    match /staff/{staffId} {
      allow read, write: if true; // Temporarily allow all access
    }

    // Secures the document template collection.
    match /document_templates/{templateId} {
      allow read, write: if true; // Temporarily allow all access
    }
  }
}

    