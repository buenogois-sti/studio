rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }
    function isOneOfRoles(roles) {
      return isAuthenticated() && request.auth.token != null && request.auth.token.role in roles;
    }
    function isAdmin() {
      return isOneOfRoles(['admin']);
    }
    function isUser(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- Global Read Rule ---
    match /{path=**} {
      allow read: if isAuthenticated();
    }

    // --- Collection-Specific Rules ---
    match /users/{userId} {
      allow update: if (isUser(userId) && request.resource.data.role == resource.data.role) || isAdmin();
      allow create, delete: if isAdmin();
    }

    match /reimbursements/{reimbursementId} {
      // Permitir leitura se autenticado (validação fina feita via queries no frontend)
      allow read: if isAuthenticated();
      // Permitir criação se autenticado
      allow create: if isAuthenticated();
      // Permitir alteração apenas pelo Admin ou pelo próprio dono
      allow update, delete: if isAdmin() || (isAuthenticated() && (resource.data.userId == request.auth.uid));
    }

    match /clients/{clientId} {
      allow create, update: if isOneOfRoles(['admin', 'lawyer', 'assistant']);
      allow delete: if isAdmin();
    }

    match /processes/{processId} {
      allow create, update: if isOneOfRoles(['admin', 'lawyer', 'assistant']);
      allow delete: if isAdmin();
    }

    match /hearings/{hearingId} {
      allow create, update: if isOneOfRoles(['admin', 'lawyer', 'assistant']);
      allow delete: if isAdmin();
    }

    match /financial_titles/{titleId} {
      allow write: if isOneOfRoles(['admin', 'financial']);
    }
    
    match /staff/{staffId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}